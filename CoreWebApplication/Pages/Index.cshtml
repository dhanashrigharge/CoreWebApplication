@page
@model CoreWebApplication.Pages.UserList.CreateModel

<br/>
<h2 class="text-info">Welcome! Please Fill the information below.</h2>
<br/>

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="User.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="User.Name" class="form-control" />
            </div>
            <span asp-validation-for="User.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="User.Phone"></label>
            </div>
            <div class="col-6">
                <input asp-for="User.Phone" class="form-control" />
            </div>
            <span asp-validation-for="User.Phone" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2 offset-2">
                <input type="submit" value="Submit" class="btn btn-primary form-control" />
            </div>

        </div>
    </form>
</div>

@section Scripts
{ 
    <partial name="_ValidationScriptsPartial"/>
}